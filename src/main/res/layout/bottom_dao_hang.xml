<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- 底部导航 -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#2D3E50"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 消息 -->
        <LinearLayout
            android:id="@+id/nav_messages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:contentDescription="消息"
                android:src="@drawable/user_news_png" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- 短视频 -->
        <LinearLayout
            android:id="@+id/nav_short_videos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:contentDescription="短视频"
                android:src="@drawable/user_video_png" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="短视频"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- 好友 -->
        <LinearLayout
            android:id="@+id/nav_friends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:contentDescription="好友"
                android:src="@drawable/user_friend_png" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好友"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- 我的 -->
        <LinearLayout
            android:id="@+id/nav_user_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:contentDescription="我的"
                android:src="@drawable/user_info_png" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="#666666" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>